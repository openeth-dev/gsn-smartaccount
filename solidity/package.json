{
  "name": "solidity",
  "description": "solidity contracts and truffle tests)",
  "version": "1.0.0",
  "scripts": {
    "test": "npx truffle test | sed -e 's/^,//;' ",
    "test_gsn": "npx truffle test test/test_sponsor_gsn.js | sed -e 's/^,//;' ",
    "ci": "npx run-with-testrpc -p 8544 -a 15 -l 80000000 --allowUnlimitedContractSize 'npx truffle --network npmtest test'",
    "compile": "npx truffle compile|sed -e 's/^,//;' ",
    "trace": "MODE=trace npx truffle test --network cov",
    "coverage": "rm -rf coverage ; rm -rf .0x-artifacts ; MODE=coverage npx truffle test --network cov; istanbul report text; istanbul report html"
  },
  "devDependencies": {
    "@0x/contracts-utils": "3.1.6",
    "@0x/sol-compiler": "3.1.8",
    "@0x/sol-coverage": "3.0.5",
    "@0x/sol-trace": "2.0.13",
    "@0x/subproviders": "4.1.0",
    "ethereum-waffle": "2.0.12",
    "ganache-cli": "6.5.0",
    "husky": "2.7.0",
    "mocha": "6.2.0",
    "run-with-testrpc": "0.3.1",
    "solc": "0.5.10",
    "truffle": "5.1.0",
    "web3": "1.0.0-beta.37"
  },
  "dependencies": {
    "bn-chai": "1.0.1",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "ethereumjs-abi": "0.6.8",
    "ethereumjs-util": "6.1.0",
    "gsn-sponsor": "^0.0.3-beta.1",
    "openzeppelin-solidity": "2.3.0",
    "tabookey-gasless": "0.4.1",
    "truffle-artifactor": "4.0.17",
    "truffle-contract": "4.0.18",
    "web3-utils": "1.2.1"
  }
}
